{
  "name": "taskmanagerplus-ai-analyzer",
  "version": "0.1.0",
  "private": true,
  "description": "Analyzer for automated test reports with optional AI step.",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:tests": "tsc -p tsconfig.vitest.json --noEmit",
    "dev": "tsx src/main.ts sample-report.json",
    "start": "node dist/main.js sample-report.json",
    "test": "vitest --run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "test:ai": "vitest --run tests/ai/aiAnalyzer.test.ts"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
